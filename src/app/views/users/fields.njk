    <input 
      type="text" 
      name="cpf_cnpj" 
      placeholder="Digite seu CPF ou CNPJ" 
      value="{{user.cpf_cnpj}}"
    >
  </div>
</div>


<div class="item">
  <div>CEP</div>
  <div class="input">
