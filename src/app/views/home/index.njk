{% extends "layout.njk" %}

{% block content %}
  <sectiom class="shop container">
    <h2>Ultimos Produtos</h2>

    <div class="items">
      {% for product in products %}
        <div class="product">
          <div 
            class="image" 
            style="background: url({{product.img if product.img else '//placehold.it/500x500?text=Produto sem imagem'}})">          

            <p>{{product.price}}</p>
            <h4>{{product.name}}</h4>

            <a href="/products/{{product.id}}" class="button">Ver Produto</a>
          </div>

        </div>
      {% endfor %}
    </div>
  </sectiom>

{% endblock content %}