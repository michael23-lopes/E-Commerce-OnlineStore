<div class="item">
  <div>Categoria</div>
  <div>
    <select name="category_id">
      {% for category in categories %}
        <option value="{{category.id}}" {% if category_id == category.id %} selected {% endif %}>
          {{category.name}}
        </option>
      {% endfor %}
    </select>
  </div>
</div>

<div class="item">
  <div>Preço do produto</div>
  <div>s
    <input 
      type="text" 
      name="name" 
      placeholder="Digite o Título do Anuncío" 
      value="{{product.name}}"
    >
  </div>
  {%if product.old_price%}
    <input type="hidden" name="old_price" value={{product.old_price}}>
  {%endif%}  
</div>

<div class="item">
  <div>Descrição</div>
  <div>
    <textarea name="description">{{product.description}}</textarea>
  </div>
</div>

<div class="item">
  <div>Imagens do Produto</div>
  <div>
    <div id="photos-upload">
      <input 
        id="photos-input" 
        type="file" 
        name="photos" 
        multiple 
        accept="image/*"
        onchange="PhotosUpload.handleFileInput(event)"
      >
      <p>Selecion até 6 Fotos</p>
    </div>
    <div id="photos-preview"></div>
  </div>
</div>


<div class="item">
  <div>Valor</div>
  <div>
    <input 
      type="text" 
      name="price" 
      placeholder="Digite o Valor do produto" 
      value="{{product.price}}"
      onkeydown="Mask.apply(this, 'formatBRL')"
    >
  </div>
</div>

<div class="item">
  <div>Quantidade em Estoque</div>
  <div>
    <input 
      type="number" 
      name="quantity" 
      placeholder="Quantidade de produtos disponíveis" 
      value="{{product.quantity}}"
    >
  </div>
</div>  

{% if (product.status == '1') or (product.status == '0') %}
  <div class="item">
    <div>Disponível ?</div>
    <div>
      <span>
        <input 
          type="radio" 
          name="status" 
          value="1"
          {% if product.status == '1' %}
            checked
          {%endif%}> Sim
      </span>
      <span>
        <input 
          type="radio" 
          name="status" 
          value="0"
          {% if product.status == '0' %}
            checked
          {%endif%}> Não
      </span>
    </div>
  </div>
{% endif %}